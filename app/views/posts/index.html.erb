


<h1>Showing all posts</h1>

	<% @posts.each do |p| %>

	<div>
		<%=  p.content %>
		<%= link_to "Edit", edit_post_path(p) %>
		<%= link_to "Delete", p, :method => :delete %>
	</div>
	<div><%= p.created_at.strftime("%d %b. %Y") %></div>
	<div><%= p.created_at.strftime("%H:%M") %></div>
	<% end %>
	
